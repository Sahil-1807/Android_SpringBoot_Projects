<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/list_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/employee_name"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/list_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        android:text="@string/employee_location"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/list_view_name"
        />

    <TextView
        android:id="@+id/list_view_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/employee_branch"
        android:layout_margin="20dp"
        android:textSize="16sp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/list_view_location"
        android:background="#C2C2C2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>